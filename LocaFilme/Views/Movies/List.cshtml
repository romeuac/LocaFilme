<a class="btn btn-primary" href="/Movies/New">NEW MOVIE</a>
<br />

<table class="table table-bordered table-hover" id="movies">

    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
            <th>Delete</th>
        </tr>
    </thead>


    <tbody>
