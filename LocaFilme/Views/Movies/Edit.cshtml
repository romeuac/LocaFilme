@model LocaFilme.ViewModels.NewMovieViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@*Action = Save, controller = Movies*@
@using (Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.movie.Name)
        @Html.TextBoxFor(m => m.movie.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.movie.ReleaseDate)
        @Html.TextBoxFor(m => m.movie.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.movie.Genre)
        @Html.DropDownListFor(m => m.movie.GenreId, new SelectList(Model.genres, "Id", "GenreName"), Model.movie.Genre.GenreName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.movie.NumberInStock)
        @Html.TextBoxFor(m => m.movie.NumberInStock, new { @class = "form-control" })
    </div>

    //Hidden Form
    @Html.HiddenFor(m => m.movie.Id)

    <button type="submit" class="btn btn-primary">Update Movie</button>
}