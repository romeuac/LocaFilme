@model LocaFilme.ViewModels.NewMovieViewModel

@{
    ViewBag.Title = "MovieForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Movie</h2>

@*Action = Save, controller = Movies*@
@using (Html.BeginForm("Create", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.movie.Name)
        @Html.TextBoxFor(m => m.movie.Name, new { @class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.movie.ReleaseDate)
        @Html.TextBoxFor(m => m.movie.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @*@Html.TextBoxFor(" ", new { @class = "form-control" })*@
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.movie.GenreId)
        @Html.DropDownListFor(m => m.movie.GenreId, new SelectList(Model.genres,"Id", "GenreName"), "Select Genre Type", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.movie.NumberInStock)
        @Html.TextBoxFor(m => m.movie.NumberInStock, new { @class = "form-control" })
    </div>

    //Hidden Form
    @Html.HiddenFor(m => m.movie.Id)

    <button type="submit" class="btn btn-primary" >Add Movie</button>
}


